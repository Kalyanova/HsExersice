<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginLeft="@dimen/card_spacing"
    android:layout_marginTop="@dimen/card_spacing"
    android:layout_marginRight="@dimen/card_spacing"
    android:minHeight="200dp"
    android:clickable="true"
    android:focusable="true"
    app:elevation="@dimen/card_height"
    app:cardCornerRadius="@dimen/card_radius"
    style="@style/Widget.MaterialComponents.CardView">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_image_height"
        android:gravity="top"
        android:layout_marginBottom="@dimen/common_margin"
        android:contentDescription="@string/card_preview_image"
        tools:src="@tools:sample/avatars"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/card_side_margin"
        android:paddingEnd="@dimen/card_side_margin"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_space_height"
            android:gravity="bottom"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/CardTitleTextStyle"
            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_desc_space_height"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/card_bottom_space_height"
            style="@style/CardDescTextStyle"
            tools:text="@tools:sample/lorem/random"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>